<UserControl x:Class="LANChat_Client.Components.Message"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LANChat_Client.Components"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200" Height="Auto" Width="Auto" SizeChanged="UserControl_SizeChanged">
    
    <Border CornerRadius="15,15,15,15" Height="Auto" Width="Auto">
        <Border.Background>
            <LinearGradientBrush StartPoint="1,0" EndPoint="1,1">
                <GradientStop Offset="0" Color="#FF051BF7" />
                <GradientStop Offset="2" Color="#FF08D1F8" />
            </LinearGradientBrush>
        </Border.Background>

        <TextBlock x:Name="text" Text="Message"  Foreground="White" TextWrapping="Wrap" Width="Auto" Height="Auto" Margin="5"/>
    </Border>
       
</UserControl>
